<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.justi.ownapp.LogInActivity">


    <TextView
        android:id="@+id/textemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Insert Email"/>

    <EditText
        android:id="@+id/editemail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email" />

    <TextView
        android:id="@+id/textpassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Insert Password"/>

    <EditText
        android:id="@+id/editpassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"/>

    <Button
        android:id="@+id/newuserbutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In!"
        android:textColor="#000000"
        android:onClick="logIn"/>

    <Button
        android:id="@+id/toregisterbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Register Page!"
        android:textColor="#000000"
        android:onClick="goToRegister"/>

</LinearLayout>
